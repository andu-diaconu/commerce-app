<div class="pt-20 h-full bg-white rounded-3xl">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8">
    <h1 class="text-2xl font-semibold text-gray-900"><%= @discount.persisted? ? "Edit" : "New" %> Coupon</h1>
  </div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8 mt-4">
    <%= form_for @discount, html: {class: "space-y-8 divide-y divide-gray-200"} do |f| %>
      <div class="space-y-8 divide-y divide-gray-200 sm:space-y-5">
        <div class="sm:grid sm:grid-cols-3 sm:gap-4 sm:items-start sm:pt-5">
          <label for="offer" class="block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2">
            Code
          </label>
          <div class="mt-1 sm:mt-0 sm:col-span-2">
            <%= f.text_field :code, required: true, class: "max-w-lg block focus:ring-orange-500 focus:border-orange-500 w-full shadow-sm sm:max-w-xs sm:text-sm border-gray-300 rounded-md" %>
          </div>
        </div>
        
        <div class="sm:grid sm:grid-cols-3 sm:gap-4 sm:items-start sm:border-t sm:border-gray-200 sm:pt-5">
          <label for="offer" class="block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2">
            Value
          </label>
          <div class="mt-1 sm:mt-0 sm:col-span-2">
            <%= f.text_field :value, required: true, class: "max-w-lg block focus:ring-orange-500 focus:border-orange-500 w-full shadow-sm sm:max-w-xs sm:text-sm border-gray-300 rounded-md" %>
          </div>
        </div>

        <div class="sm:grid sm:grid-cols-3 sm:gap-4 sm:items-start sm:border-t sm:border-gray-200 sm:pt-5">
          <label for="offer" class="block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2">
            Expiration Date
          </label>
          <div class="mt-1 sm:mt-0 sm:col-span-2">
            <%= f.date_field :expires_at, required: true, min: (Date.today + 1.day), class: "max-w-lg block focus:ring-orange-500 focus:border-orange-500 w-full shadow-sm sm:max-w-xs sm:text-sm border-gray-300 rounded-md" %>
          </div>
        </div>

      </div>

      <div class="pt-5">
        <div class="flex justify-end">
          <%= link_to discounts_path, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500" do %>
            Cancel
          <% end %>
          <button type="submit" class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-orange-600 hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500">
            Save
          </button>
        </div>
      </div>
    <% end %>
    
  </div>
</div>
